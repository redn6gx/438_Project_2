<%- include ('templates/header'); -%>
<%- include ('templates/authnav'); -%>
<br>

<div class="row">
  <div class="col-75">
    <div class="container">
      <form action="/receipt">

        <div class="row">
          <div class="col-50">
            <h3>User Information</h3>
            <label for="name">Full Name</label>
            <input type="text" id="name" name="Name" placeholder="" required>
            <label for="email">Email</label>
            <input type="text" id="email" name="Email" placeholder="" required>
            <label for="adr">Address</label>
            <input type="text" id="address" name="Address" placeholder="" required>
            <label for="city">City</label>
            <input type="text" id="city" name="City" placeholder="" required>

            <div class="row">
              <div class="col-50">
                <label for="state">State</label>
                <input type="text" id="state" name="state" placeholder="" required>
              </div>
              <div class="col-50">
                <label for="zip">Zip</label>
                <input type="text" id="zip" name="zip" placeholder="" required>
              </div>
            </div>
          </div>

          <div class="col-50">
            <h3>Payment</h3>
            
            <label for="cname">Name on Card</label>
            <input type="text" id="cname" name="cardname" placeholder="" required>
            <label for="cnum">Card number</label>
            <input type="text" id="cnum" name="cardnumber" placeholder="1" required>
            <label for="expdate">Exp Date</label>
            <input type="text" id="expdate" name="expdate" placeholder="00/00" required>

            <div class="row">
              <div class="col-50">
                <label for="cvv">CVV</label>
                <input type="text" id="cvv" name="cvv" placeholder="" required>
              </div>
            </div>
          </div>

        </div>
        <label>
          <input type="checkbox" checked="checked" name="sameadr"> Shipping address same as billing address
        </label><br>
        <input type="submit" value="Checkout and View Receipt" class="btn">
      </form>
    </div>
  </div>

  <div class="col-25">
    <div class="container">
      <h4>Cart
      </h4>
      
      <% var total = 0 %>
      
      <% results.forEach(function(result) {  %>
      
        <p><a href="#"><%= result.itemname %></a> <span class="price">$<%= result.price * result.units %></span></p>
      
        <% total += (result.price * result.units) %>
      <% });%>
      <hr>
      <p>Total <span class="price" style="color:black"><b>$<%= total %></b></span></p>
    </div>
  </div>
</div>
<%- include ('templates/footer'); -%>
